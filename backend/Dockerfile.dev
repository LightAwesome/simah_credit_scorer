FROM python:3.11-slim

WORKDIR /app

# Combine RUN commands for better layer caching and smaller image
RUN apt-get update && apt-get install -y \
    libgl1-mesa-glx \
    libglib2.0-0 \
    poppler-utils \
    tesseract-ocr \
    && rm -rf /var/lib/apt/lists/*

# Copy and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the backend directory (this is the key fix!)
COPY . /app/

# Set PYTHONPATH so Python can find the api module
ENV PYTHONPATH=/app

# Expose port for documentation
EXPOSE 8000

# Start command - now Python can find the api module
CMD ["uvicorn", "api.routes:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
